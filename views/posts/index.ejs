<%- include('../header') -%>
<div class="row">
  <div id="left" class="col-md-3 col-12">
    <h4 class="heading">Politics</h4>
    <div id="gutter-left">
    <% for (var i = 0; politics && i < politics.length; i++) { %>
      <%- include('gutter', {post: politics[i]}); %>
    <% } %>
    </div>
  </div>
  <div class="col">
    <% if (features) { %>
      <div id="my-carousel" class="carousel slide" data-ride="carousel" data-interval="10000">
        <ol class="carousel-indicators"></ol>
        <div class="carousel-inner" role="listbox">
          <% var i = 0 %>
          <% features.forEach(function(feature) { %>
            <% if (i == 0) { %>
              <div class="carousel-item active">
            <% } else { %>
              <div class="carousel-item">
            <% } %>
              <% post = Post.find(feature.post_id) %>
              <a href="/posts/<%= post.postId %>"><img src="" /></a>
              <% i++ %>
              <div class="carousel-caption d-none d-md-block">
                <h3><a href="/posts/<%= post.postId %>"><%= post.title %></a></h3>
              </div>
            </div>
        <% }); %>
      </div>
      <a class="carousel-control-prev" href="#my-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#my-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <% } %> 
    <h4 class="heading">Current Events</h4>
      <% i = 0 %>
      <% for (i = 0; i < current.length; i++) { %>
        <% post = current[i]; %>
        <% if (i == 2) { %>
          <!-- Infinite timeline -->
        <% } %>
        <article class="article">
          <div class="row">
            <div class="col">
              <h3><a href="/posts/<%= post.postId %>"><%= post.title %></a></h3>
              <img src="" />
              <h6>by <%= post.author %></h6>
              <%# render partial: "shared/blurb", locals: {post: post} %>
            </div>
          </div>
        </article>
        <hr />  
      <% } %> 
  </div>
  <div id="right" class="col-md-3 col-12">
    <div class="greyed">
      <div id="quiz" class="bord">
        <h4 class="center"><a href="/quizzes" class="darker">First quiz here</a></h4>
      </div>
    </div>
    <h4 class="heading mt-4">Local</h4>
    <div id="gutter-right">
      <% for (i = 0; local && i < local.length; i++) { %>
        <% if (i == 5) { %>
          <div id="carousel-2" class="carousel slide" data-ride="carousel" data-interval="10000">
            <ol class="carousel-indicators"></ol>
            <div class="carousel-inner" role="listbox">
              <% var k = 0; %>
              <%# short.forEach(function(sh) { %>
                <% if (k == 0) { %>
                  <div class="carousel-item align-items-center active">
                <% } else { %>
                  <div class="carousel-item align-items-center">
                <% } %>
                <a href="#carousel-2" role="button" data-slide="next">
                  <p><%= sh.title %></p>
                </a>
                <% k++; %>
                </div>
              <%# } %>
            </div>
          </div>
        <% } %>
        <%- include('gutter', {post: local[i]}); -%> 
      <% } %>
    </div>
  </div>
</div>
<%- include('../footer') -%>
