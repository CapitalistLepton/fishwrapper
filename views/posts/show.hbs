{{> header}}
<style>
  {{{post.postStyle}}}
</style>
<div class="row">
  <div class="col text-center">
    <h2>{{{post.title}}}</h2>
    <h6>by {{post.author}}</h6>
    <h6>Published: {{post.published_on}}</h6>
  </div>
</div>
<div class="row">
  <div class="col image-container text-center">
    <img alt="Article thumnail" class="img-fluid" src="{{image post.thumbnail}}">
    <h6>{{post.thumbnail_credit}}</h6>
  </div>
</div>
<div class="row">
 <!-- Load Facebook SDK for JavaScript -->
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
  <script>window.twttr = (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0],
      t = window.twttr || {};
    if (d.getElementById(id)) return t;
    js = d.createElement(s);
    js.id = id;
    js.src = "https://platform.twitter.com/widgets.js";
    fjs.parentNode.insertBefore(js, fjs);

    t._e = [];
    t.ready = function(f) {
      t._e.push(f);
    };

    return t;
  }(document, "script", "twitter-wjs"));</script>
  <script id="tumblr-js" async src="https://assets.tumblr.com/share-button.js"></script>
  <div class="col" id="social-networks">
    <div class="fb-share-button" data-href="http://www.thefishwrapper.news/posts/{{post.postId}}" data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.thefishwrapper.news%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div>
    <a class="twitter-share-button" href="https://twitter.com/intent/tweet?text=Check%20out%20this%20article&url=http://www.thefishwrapper.news/posts/{{post.postId}}">Tweet</a>
    <a class="tumblr-share-button" href="https://www.tumblr.com/share" data-href="http://www.thefishwrapper.news/posts/{{post.postId}}>"></a>
  </div>
</div>
<div class="row mt-3">
  <div class="col post">
    {{{post.content}}}
  </div>
</div>
{{#if req.signedCookies.id_token}}
  <div class="row">
    <p class="mr-2"><a class="btn btn-outline-secondary" href="/posts/{{post.postId}}/edit">Edit</a></p>
    <p class="mr-2"><a class="btn btn-outline-secondary" href="/posts/{{post.postId}}/delete">Delete</a></p>
  </div>
{{/if}}
{{> footer}}
