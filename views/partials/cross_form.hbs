<form action="/crosswords" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" value="{{crossword.title}}" /><br />
  <label for="solution">Solution:</label><br />
  <textarea name="solution" cols="80" rows="12">{{crossword.solution}}</textarea><br />
  <input type="hidden" name="crossId" value="{{crossword.crossId}}" />
  <input type="hidden" name="_method" value="{{method}}" />

  <input type="submit" value="Submit" class="btn btn-outline-secondary" />
</form>
