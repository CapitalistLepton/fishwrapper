<form action="/subscribers" method="POST">
  <label for="email">Email:</label>
  <input type="email" name="email" placeholder="Enter your email here" /><br />
  <label for="phone">Phone:</label>
  <input type="tel" name="phone" placeholder="(123) 456-7890" /><br />
  <input type="hidden" name="_method" value="{{method}}" />
  <input type="submit" value="Submit" class="btn btn-outline-secondary" />
</form>
